<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/title_view"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/all_bg"
                android:gravity="left"
                android:paddingBottom="@dimen/margin_tb_xsmall"
                android:paddingLeft="@dimen/margin_lr_large"
                android:paddingTop="@dimen/margin_tb_xsmall"
                android:text="账号设置"
                android:textColor="@color/text_color_hint"
                android:textSize="@dimen/text_size_small"/>

            <ImageView
                style="@style/horizontal_line_style"
                />


            <LinearLayout
                android:id="@+id/lin_user_set_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_tb_normal"
                android:layout_marginLeft="@dimen/margin_lr_large"
                android:layout_marginTop="@dimen/margin_tb_normal"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_uspn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="手机号码"
                    android:textColor="@color/text_color_normal"
                    android:textSize="@dimen/text_size_normal"/>

                <TextView
                    android:id="@+id/tv_uspn_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_lr_large"
                    android:text="186 **** ****"
                    android:textColor="@color/text_color_hint"
                    android:textSize="@dimen/settings_text_size"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/arrow_margin"
                    android:src="@drawable/iv_arrows"/>

            </LinearLayout>

            <ImageView
                style="@style/horizontal_line_style"
                android:layout_marginLeft="@dimen/margin_lr_large"
                android:layout_marginRight="@dimen/margin_lr_small"
                />

            <LinearLayout
                android:id="@+id/lin_user_set_clear_cache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_tb_normal"
                android:layout_marginLeft="@dimen/margin_lr_large"
                android:layout_marginTop="@dimen/margin_tb_normal"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_uscc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="清除缓存"
                    android:textColor="@color/text_color_normal"
                    android:textSize="@dimen/text_size_normal"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/arrow_margin"
                    android:src="@drawable/iv_arrows"/>

            </LinearLayout>

            <ImageView
                style="@style/horizontal_line_style"
                />

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/all_bg"
                android:gravity="left"
                android:paddingBottom="@dimen/margin_tb_xsmall"
                android:paddingLeft="@dimen/margin_lr_large"
                android:paddingTop="@dimen/margin_tb_xsmall"
                android:text="第三方账号"
                android:textColor="@color/text_color_hint"
                android:textSize="@dimen/text_size_small"/>

            <ImageView
                android:visibility="gone"
                style="@style/horizontal_line_style"
                />


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/lin_user_set_wechat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_tb_normal"
                android:layout_marginLeft="@dimen/margin_lr_large"
                android:layout_marginTop="@dimen/margin_tb_normal"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_uswechat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="微信"
                    android:textColor="@color/text_color_normal"
                    android:textSize="@dimen/text_size_normal"/>

                <TextView
                    android:id="@+id/tv_uswechat_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_lr_large"
                    android:text="未绑定"
                    android:textColor="@color/text_color_hint"
                    android:textSize="@dimen/settings_text_size"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/arrow_margin"
                    android:src="@drawable/iv_arrows"/>

            </LinearLayout>


            <ImageView
                android:visibility="gone"
                style="@style/horizontal_line_style"
                android:layout_marginLeft="@dimen/margin_lr_large"
                android:layout_marginRight="@dimen/margin_lr_small"
                />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/lin_user_set_qq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_tb_normal"
                android:layout_marginLeft="@dimen/margin_lr_large"
                android:layout_marginTop="@dimen/margin_tb_normal"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_usqq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="QQ"
                    android:textColor="@color/text_color_normal"
                    android:textSize="@dimen/text_size_normal"/>

                <TextView
                    android:id="@+id/tv_usqq_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_lr_large"
                    android:text="未绑定"
                    android:textColor="@color/text_color_hint"
                    android:textSize="@dimen/settings_text_size"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/arrow_margin"
                    android:src="@drawable/iv_arrows"/>

            </LinearLayout>

            <ImageView
                android:visibility="gone"
                style="@style/horizontal_line_style"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/all_bg"
                android:gravity="left"
                android:paddingBottom="@dimen/margin_tb_xsmall"
                android:paddingLeft="@dimen/margin_lr_large"
                android:paddingTop="@dimen/margin_tb_xsmall"
                android:text="其他设置"
                android:textColor="@color/text_color_hint"
                android:textSize="@dimen/text_size_small"/>

            <ImageView
                style="@style/horizontal_line_style"
                />


            <LinearLayout
                android:id="@+id/lin_user_set_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_tb_normal"
                android:layout_marginLeft="@dimen/margin_lr_large"
                android:layout_marginTop="@dimen/margin_tb_normal"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_usquestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="问题反馈"
                    android:textColor="@color/text_color_normal"
                    android:textSize="@dimen/text_size_normal"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/arrow_margin"
                    android:src="@drawable/iv_arrows"/>

            </LinearLayout>


            <ImageView
                style="@style/horizontal_line_style"
                android:layout_marginLeft="@dimen/margin_lr_large"
                android:layout_marginRight="@dimen/margin_lr_small"
                />

            <LinearLayout
                android:id="@+id/lin_user_set_about_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_tb_normal"
                android:layout_marginLeft="@dimen/margin_lr_large"
                android:layout_marginTop="@dimen/margin_tb_normal"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_usabout_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="关于我们"
                    android:textColor="@color/text_color_normal"
                    android:textSize="@dimen/text_size_normal"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/arrow_margin"
                    android:src="@drawable/iv_arrows"/>

            </LinearLayout>

            <ImageView
                style="@style/horizontal_line_style"
                />

            <TextView
                android:id="@+id/tv_user_set_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_tb_xlarge"
                android:background="@drawable/back_all_bg_90_draw"
                android:paddingTop="@dimen/margin_tb_normal"
                android:paddingBottom="@dimen/margin_tb_normal"
                android:paddingLeft="@dimen/margin_lr_normal"
                android:paddingRight="@dimen/margin_lr_normal"
                android:text="退出登录"
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_size_big"/>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>