<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparency"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel_dialog_weight_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/back_white_10"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_dialog_weight_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/back_weight_hint"
            />

        <TextView
            android:id="@+id/tv_dialog_weight_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_tb_40"
            android:text="tishi "
            android:textColor="@color/text_color_hint"
            android:textSize="@dimen/text_size_large"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_dia_weight_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_tb_large"
        android:background="@drawable/icon_close_weight_hint"
        />

</LinearLayout>