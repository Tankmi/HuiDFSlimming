<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_food_calorie_head_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_color"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/tv_food_calorie_head_title"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="食品名称"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/margin_tb_normal"
        android:layout_marginBottom="@dimen/margin_tb_normal"
        android:layout_marginLeft="@dimen/margin_lr_16"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_15"/>

    <TextView
        android:id="@+id/tv_food_calorie_head_content"
        android:text="100克可食用部分热量"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="right"
        android:layout_marginTop="@dimen/margin_tb_normal"
        android:layout_marginBottom="@dimen/margin_tb_normal"
        android:layout_marginRight="@dimen/margin_lr_normal"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_15"/>

</LinearLayout>