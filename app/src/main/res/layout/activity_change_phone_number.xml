<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/title_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lin_change_pn_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_lr_normal"
            android:layout_marginTop="@dimen/margin_tb_normal"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_cpna_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_cpn_phone_number"/>

            <com.huidf.slimming.view.edittext_number.EditTextNumberView
                android:id="@+id/et_cpna_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/margin_tb_normal"
                android:layout_marginLeft="@dimen/margin_lr_small"
                android:layout_marginTop="@dimen/margin_tb_normal"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入您的手机号"
                android:inputType="phone"
                android:letterSpacing="0.1"
                android:maxLength="20"
                android:textColor="@color/text_color_normal"
                android:textColorHint="@color/text_color_hint"
                android:textSize="@dimen/text_size_normal"/>

        </LinearLayout>

        <ImageView
            style="@style/horizontal_line_style"
            android:layout_marginLeft="@dimen/margin_lr_normal"
            />

        <LinearLayout
            android:id="@+id/lin_change_pn_verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_lr_normal"
            android:layout_marginRight="@dimen/margin_lr_normal"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_cpnv_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_cpn_verify_code"/>

            <EditText
                android:id="@+id/et_cpnv_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_tb_normal"
                android:layout_marginLeft="@dimen/margin_lr_small"
                android:layout_marginTop="@dimen/margin_tb_normal"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入验证码"
                android:inputType="phone"
                android:letterSpacing="0.1"
                android:maxLength="20"
                android:textColor="@color/text_color_normal"
                android:textColorHint="@color/text_color_hint"
                android:textSize="@dimen/text_size_normal"/>

            <TextView
                android:id="@+id/tv_cpnv_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back_all_bg_verify_90_draw"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:paddingBottom="@dimen/margin_tb_small"
                android:paddingLeft="@dimen/margin_lr_normal"
                android:paddingRight="@dimen/margin_lr_normal"
                android:paddingTop="@dimen/margin_tb_small"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"/>

        </LinearLayout>

        <ImageView
            style="@style/horizontal_line_style"
            />
    </LinearLayout>

</RelativeLayout>