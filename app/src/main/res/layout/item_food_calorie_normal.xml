<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_food_calorie_normal_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/tv_food_calorie_normal_title"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="食品名称"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingTop="@dimen/margin_tb_23"
        android:paddingBottom="@dimen/margin_tb_23"
        android:paddingLeft="@dimen/margin_lr_16"
        android:textColor="@color/text_color_normal"
        android:textSize="@dimen/text_size_15"/>

    <TextView
        android:id="@+id/tv_food_calorie_normal_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="right"
        android:paddingTop="@dimen/margin_tb_23"
        android:paddingBottom="@dimen/margin_tb_23"
        android:paddingRight="@dimen/margin_lr_13"
        android:textColor="@color/main_color"
        android:textSize="@dimen/text_size_15"/>

</LinearLayout>