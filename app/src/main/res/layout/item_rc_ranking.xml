<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_item_ranking_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/tv_item_ranking_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_lr_16"
        android:gravity="center"
        android:textColor="@color/text_color_normal"
        android:textSize="@dimen/text_size_15"
        />

    <ImageView
        android:id="@+id/iv_item_ranking_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_lr_8"
        android:layout_marginTop="@dimen/margin_tb_normal"
        android:layout_marginBottom="@dimen/margin_tb_normal"
        />


    <TextView
        android:id="@+id/tv_item_ranking_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_lr_8"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="left"
        android:letterSpacing="0.1"
        android:lines="1"
        android:textColor="@color/text_color_normal"
        android:textSize="@dimen/text_size_15"
        />

    <TextView
        android:id="@+id/tv_item_ranking_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_lr_normal"
        android:ellipsize="end"
        android:gravity="right"
        android:letterSpacing="0.1"
        android:textColor="@color/text_color_undertint"
        android:textSize="@dimen/text_size_normal"
        />


</LinearLayout>